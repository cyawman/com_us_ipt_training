{% extends "::admin.html.twig" %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12"><h1>Dashboard</h1></div>
</div>
<div class="row-fluid">    
    <div class="span7">
        <!-- Recent User Activity -->
        <section>
            <header><h2>Recent User Activity</h2></header>
            {% if userLessons %}
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Lesson</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in lessonPlans %}
                        <tr>
                            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="well well-small">No Recent User Activity</div>
            {% endif %}
        </section>
    </div>
    <div class="span5">
        <!-- Company Overviews -->
        <section>
            <header><h2>Companies</h2></header>
            {% if companies %}
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Users</th>
                            <th>Lessons</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in companies %}
                        <tr>
                            <td><a href="{{ path('company_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3"><small>Tasks: <a href="{{ path('company') }}">View all</a> | <a href="{{ path('company_new') }}">Create</a></small></td>
                        </tr>
                    </tfoot>
                </table>
            {% else %}
                <div class="well well-small">No Companies</div>
            {% endif %}
        </section>
    </div>
</div>
<div class="row-fluid">
    <div class="span7">
        <!-- Lesson Plans -->
        <section>
            <header><h2>Lesson Plans</h2></header>
            {% if lessonPlans %}
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Total lessons in plan</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in lessonPlans %}
                        <tr>
                            <td><a href="{{ path('lessonplan_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                            <td>{{ entity.description }}</td>
                            <td>{{ entity.lessonPlanLessons|length }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3"><small>Tasks: <a href="{{ path('lessonplan') }}">View all</a> | <a href="{{ path('lessonplan_new') }}">Create</a></small></td>
                        </tr>
                    </tfoot>
                </table>
            {% else %}
                <div class="well well-small">No Lesson Plans</div>
            {% endif %}
        </section>
    </div>
    <div class="span5">
        <!-- Common Tasks -->
        <section>
            <header><h2>Common Tasks</h2></header>
            <div class="well well-small">
                <nav>
                    <ul class="nav nav-list">
                        <li class="nav-header">Lessons</li>
                        <li><a href="{{ path('lesson_new') }}">Create a new Lesson</a></li>
                        <li><a href="{{ path('lessonplan_choose_for_lesson') }}">Add a Lesson to a Lesson Plan</a></li>
                        <li><a href="{{ path('lesson') }}">View all Lessons</a></li>
                        <li class="divider"></li>
                        <li class="nav-header">Users</li>
                        <li><a href="{{ path('user_new') }}">Create a new Users</a></li>
                        <li><a href="{{ path('user') }}">Add a User to a Company</a></li>
                        <li><a href="{{ path('user') }}">View all Users</a></li>
                    </ul>
                </nav>
            </div>
        </section>
    </div>
</div>
{% endblock %}
