{% extends "::admin.html.twig" %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
<h1>Dashboard</h1>
<div class="row-fluid">
    <div class="span8">
        <!-- Recent User Activity -->
    </div>
    <div class="span4">
        <!-- Company Overviews -->
    </div>
    <div class="span8">
        <!-- Lesson Plans -->
        <section>
            <header><h2>Lesson Plans</h2></header>
            {% if lessonPlans %}
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Total lessons in plan</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for entity in lessonPlans %}
                        <tr>
                            <td><a href="{{ path('lessonplan_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.name }}</td>
                            <td>{{ entity.description }}</td>
                            <td>{{ entity.lessonPlanLessons|length }}</td>
                            <td><a href="{{ path('lessonplan_show', { 'id': entity.id }) }}">View details</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="well well-small">No Lesson Plans</div>
            {% endif %}
            <footer>
                <nav>
                    <ul class="unstyled inline">
                        <li><a href="{{ path('lessonplan_new') }}">Create a Lesson Plan</a></li>
                    </ul>
                </nav>
            </footer>
        </section>
    </div>
    <div class="span4">
        <!-- Common Tasks -->
    </div>
</div>
{% endblock %}
