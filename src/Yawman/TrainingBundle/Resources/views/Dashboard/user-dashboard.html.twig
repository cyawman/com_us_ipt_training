{% extends "::user.html.twig" %}

{% block title %}User Dashboard{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12"><h1>{% if isCurrentUser %}My Dashboard{% else %} Dashboard for {{ user.username }} {% endif %}</h1></div>
</div>
<div class="row-fluid">
    <div class="span7">
        <section>
            <header><h2>Lessons</h2></header>
            {% render url('user_lesson_plans_for_user', {'userId': user.id}) %}
        </section>
     </div>
</div>
{% endblock %}

