{% extends "::admin.html.twig" %}

{% block title %}Company Edit{% endblock %}

{% block content %}
<h1>Company Edit</h1>

{% if app.session.hasFlash('success') %}
    <div class="alert alert-success">
        {{ app.session.flash('success') }}
    </div>
{% endif %}

{% if app.session.hasFlash('error') %}
    <div class="alert alert-error">
        {{ app.session.flash('error') }}
    </div>
{% endif %}

<form action="{{ path('company_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn btn-primary" type="submit">Edit</button>
    </p>
</form>

<form action="{{ path('company_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class="btn btn-danger" type="submit">Delete</button>
</form>
<a href="{{ path('company') }}">Back to the list</a>
{% endblock %}