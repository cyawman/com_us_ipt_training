{% extends "::admin.html.twig" %}

{% block headTitle %}Company User Creation{% endblock %}

{% block bodyTitle %}Create a New Company User{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <p class="lead">Add a new User to the Company.</p>
        <hr />
    </div>
</div>

<div class="row-fluid">
    <div class="span7">
        <p>Creating the Company User automatically assigns the User to this Company. The User is also assigned the same Lesson Plans assigned to the Company.</p>
        <form action="{{ path('company_create_user', {'companyId': company.id}) }}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <p>
                <button class="btn btn-primary" type="submit"><i class="icon-plus-sign icon-white"></i> Create</button>
            </p>
        </form>
        <a href="{{ path('dashboard') }}"><i class="icon-backward"></i> Back to the Dashboard</a>
    </div>
    <div class="span5">
        
    </div>
</div>
{% endblock %}
