{% extends "::admin.html.twig" %}

{% block title %}Company List{% endblock %}

{% block content %}
<h1>Company list</h1>

<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('company_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>
                <a href="{{ path('company_show', { 'id': entity.id }) }}"><i class="icon-eye-open"></i> View</a><br />
                <a href="{{ path('company_edit', { 'id': entity.id }) }}"><i class="icon-wrench"></i> Edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a class="btn btn-primary" href="{{ path('company_new') }}"><i class="icon-briefcase icon-white"></i> Create Company</a>
{% endblock %}