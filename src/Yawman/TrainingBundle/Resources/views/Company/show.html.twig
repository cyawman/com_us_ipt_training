{% extends "::admin.html.twig" %}

{% block title %}Company{% endblock %}

{% block content %}
<h1>{{ entity.name }}</h1>

<div class="row-fluid">
    <div class="span9">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="span3">
        <div class="well">
            <h3>Common Tasks</h3>
            <ul class="record_actions">
            <li>
                <a href="{{ path('company') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('company_edit', { 'id': entity.id }) }}">Edit</a>
            </li>
            <li>
                <form action="{{ path('company_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
                        <button type="submit">Delete</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
</div>
{% endblock %}