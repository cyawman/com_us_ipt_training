{% extends "::admin.html.twig" %}

{% block headTitle %}Company{% endblock %}

{% block bodyTitle %}<h1>{{ entity.name }} Users</h1>{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <p class="lead">A list of Company Users</p>
        <hr />
    </div>
</div>
<div class="row-fluid">
    <div class="span7">
        {% if entity.users %}
        <h2><a name="users"></a>Users</h2>
            <p>Users can be added and removed from this Company.</p>
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Unfinished Lessons</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in entity.users %}
                        <tr>
                            <td>{{ user.email }}</td>
                            <td>{% render url('user_show_remaining_lessons', {'id': user.id}) %}</td>
                            <td>
                                {% for group in user.groups %}
                                    {{ group.name|capitalize }}
                                {% endfor %}
                            </td>
                            <td><a href="{{ path("company_remove_user", {"companyId": entity.id, "userId": user.id, "redirect": path('dashboard') }) }}">Remove</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <p>
                <a class="btn btn-primary" href="{{ path('company_list_available_users', { 'companyId': entity.id }) }}"><i class="icon-plus-sign icon-white"></i> Add User(s)</a>
            </p>
        {% endif %}
        <p>
            <a href="{{ path('dashboard') }}"><i class="icon-backward"></i> Back to the Dashboard</a>
        </p>
    </div>
    <div class="span5">
        
    </div>
</div>
{% endblock %}
