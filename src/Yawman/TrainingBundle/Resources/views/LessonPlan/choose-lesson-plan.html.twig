{% extends "::admin.html.twig" %}

{% block headTitle %}Lesson Plans{% endblock %}

{% block bodyTitle %}Choose a Lesson Plan{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <p class="lead">Choose the Lesson Plan first.</p>
        <hr />
    </div>
</div>
<div class="row-fluid">
    <div class="span12">
        <form action="{{ path('lessonplan_choose_for_lesson') }}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <p>
                <button class="btn btn-primary" type="submit"><i class="icon-forward icon-white" ></i> Next</button>
            </p>
        </form>
    </div>
</div>
{% endblock %}
