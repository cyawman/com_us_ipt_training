{% extends "::admin.html.twig" %}

{% block headTitle %}Lesson Edit{% endblock %}

{% block bodyTitle %}<h1>Lesson edit</h1>{% endblock %}

{% block content %}
<form action="{{ path('lesson_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('lesson') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('lesson_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}