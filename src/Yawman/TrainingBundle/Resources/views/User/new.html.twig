{% extends "::admin.html.twig" %}

{% block title %}User Creation{% endblock %}

{% block content %}
<h1>User creation</h1>

<form action="{{ path('user_create') }}" method="post" {{ form_enctype(form) }}>
    {% if form.get('errors') is not empty %}
    <div class="alert alert-error alert-block">{{ form_errors(form) }}</div>
    {% endif %}

    {{ form_row(form.email) }}
    {{ form_row(form.password) }}

    {{ form_rest(form) }}
    <p>
        <button class="btn btn-primary" type="submit">Create</button>
    </p>
</form>

<ul class="record_actions unstyled">
    <li>
        <a href="{{ path('user') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}