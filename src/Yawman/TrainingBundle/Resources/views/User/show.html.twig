{% extends "::admin.html.twig" %}

{% block title %}User{% endblock %}

{% block content %}
<h1>User</h1>

<table class="table table-striped table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Is Active</th>
            <td>{{ entity.isActive }}</td>
        </tr>
        <tr>
            <th>Company</th>
            <td>{% if entity.company %}{{ entity.company.name }}{% endif %}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>
                {% for group in entity.groups %}
                    {{ group.name }}&nbsp; 
                {% endfor %}
            </td>
        </tr>
    </tbody>
</table>

<ul class="unstyled record_actions">
    <li><a href="{{ path('user') }}">Back to the list</a></li>
    <li><a class="btn btn-primary" href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a></li>
    <li>
        <form action="{{ path('user_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}