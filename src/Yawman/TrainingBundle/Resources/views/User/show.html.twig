{% extends "::admin.html.twig" %}

{% block headTitle %}User{% endblock %}

{% block bodyTitle %}<h1>User</h1>{% endblock %}

{% block content %}
<table class="table table-striped table-hover">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Is Active</th>
            <td>{{ entity.isActive }}</td>
        </tr>
        <tr>
            <th>Company</th>
            <td>{% if entity.company %}{{ entity.company.name }}{% endif %}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>
                {% for group in entity.groups %}
                    {{ group.name }}&nbsp; 
                {% endfor %}
            </td>
        </tr>
    </tbody>
</table>

<ul class="unstyled record_actions">
    <li><a href="{{ path('user') }}">Back to the list</a></li>
    {% if is_granted('ROLE_MANAGER') %}
    <li><a class="btn btn-primary" href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a></li>
    {% endif %}
</ul>
{% endblock %}