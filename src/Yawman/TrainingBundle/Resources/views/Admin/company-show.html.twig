{% extends "::admin.html.twig" %}

{% block title %}Company{% endblock %}

{% block content %}
<h1>{{ entity.name }}</h1>

<table class="table table-condensed">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<form action="{{ path('admin_company_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <button class="btn btn-danger" type="submit">Delete</button>
</form>

<a class="btn btn-primary" href="{{ path('admin_company_edit', { 'id': entity.id }) }}">Edit</a>
<a href="{{ path('admin_company') }}">Back to the list</a>

{% endblock %}